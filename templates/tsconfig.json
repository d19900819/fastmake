{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "target": "ES5", // "@babel/preset-typescript" 没有此配置
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "typings.d.ts"],
  "exclude": [
    "./src/public",
    "*Render.js",
    "main.js",
    ".app",
    "configs",
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "lib",
    "fixtures",
    "examples"
  ]
}
